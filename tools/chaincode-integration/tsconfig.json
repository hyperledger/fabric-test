{
    "extends":"@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ],
    "ts-node": {
        "files": true
    }
 }