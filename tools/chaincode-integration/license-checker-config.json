{
    "$schema": "https://raw.githubusercontent.com/awjh/license-check-and-add/master/config-schema.json",
    "license": "license.txt",
    "ignore": ["**/.gitkeep", "**/*.md", ".*", "**/*.mod", "**/*.sum"],
    "licenseFormats": {
        "feature|yaml|yml|^Dockerfile": {
            "eachLine": {
                "prepend": "# "
            }
        },
        "hbr": {
            "eachLine": {
                "prepend": "{{! ",
                "append": " }}"
            }
        }
    }
}
